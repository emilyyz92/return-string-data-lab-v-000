<h1>Products Index</h1>
<ul>
  <% @products.each do |product| %>
    <li>
      <%= product.name %>
      <button class="js-product" data-id="<%= product.id%>">
        More Info</button>
    </li>
  <% end %>
</ul>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $('.js-product').on('click', function() {
      var id = $(this).data('id')
      $.get('/products/' + id + '/body', function(resp) {
        debugger
        $('.js-product-' + id).html(resp.html())
      })
    })
  })
</script>
